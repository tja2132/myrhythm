<h2>All Tasks</h2>

<table class="table table-striped col-md-12" id="routines">
  <thead>
    <tr>

      <th>Title</th>

      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |t| %>
      <tr>
        <td>
          <%= t.title %>
        </td>
        <td>
          <%= link_to "More about #{t.title}", task_path(t) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new Task', new_task_path, class: 'btn btn-primary' %>
