<%= form_for :user, :url => user_update_settings_path(@user) do |form| %>
  <div id="user-info">
  <fieldset>
    <legend><strong>User Information</strong>
    <!-- <%= link_to '', edit_user_registration_path, class: "bi bi-pencil-square btn btn-sm btn-outline-primary"  %> -->
    </legend>
    <div class="form-group">
      <fieldset>
        <label class="form-label">Columbia UNI</label>
        <input class="form-control" type="text" readonly="" placeholder=<%= current_user.columbia_uni %> >
      </fieldset>
    </div><br>
    <div class="form-group">
      <fieldset>
        <label class="form-label">First Name</label>
        <input class="form-control" type="text" readonly="" placeholder=<%= current_user.first_name %> >
      </fieldset>
    </div><br>
    <div class="form-group">
      <fieldset>
        <label class="form-label">Last Name</label>
        <input class="form-control" type="text" readonly="" placeholder=<%= current_user.last_name %> >
      </fieldset>
    </div><br>
  </fieldset>
</div>
  <div class="form-group">
    <%= form.label :default_calendar, "Default Calendar View", class: "form-label" %>
    <%= form.select :default_calendar, ["Daily", "Weekly"], class: "form-control" %>
  </div>
  <br>

  <div class="form-group">
    <%= form.label :default_insights, "Default Number of Days Shown on Insights Page", class: "form-label" %>
    <%= form.select :default_insights, [7, 30, 90], class: "form-control" %>
  </div>
  <br>

<!--  <div class="form-group">-->
    <%#= form.label :first_day_of_week, "First Day of the Week", class: "form-label" %>
    <%#= form.select :first_day_of_week, Routine.get_full_days_of_week, class: "form-control" %>
<!--  </div>-->
<!--  <br>-->
  <%= form.submit "Update Settings", :class => 'btn btn-sm btn-outline-success'%>
  <br><br>


<% end %>
